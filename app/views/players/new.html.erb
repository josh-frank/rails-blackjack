<%= stylesheet_link_tag "blackjack_table" %>
<h1>Create a new player</h1>
<%= form_for @new_player do | f | %>
    <% if flash[ :messages ] %>
        <% flash[ :messages ].each do | error_message | %>
            <h3><%= error_message %></h3>
        <% end %>
    <% end %>
    <%= f.label :name, "New player name: " %><br />
    <%= f.text_field :name %><br /><br />
    <%= f.label :password, "Choose your password: " %><br />
    <%= f.password_field :password %><br /><br />
    <%= f.label :password_confirmation, "Confirm your password: " %><br />
    <%= f.password_field :password_confirmation %><br /><br />
    <%= f.submit %>
<% end %>